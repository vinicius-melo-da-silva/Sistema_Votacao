@model SistemaVotacao.Models.Eleitores

@{
    ViewData["Title"] = "Cadastrar Eleitor";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="nome" class="form-label"></label>
                            <input asp-for="nome" class="form-control" placeholder="Digite o nome completo do eleitor" />
                            <span asp-validation-for="nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="titulo_eleitoral" class="form-label"></label>
                            <input asp-for="titulo_eleitoral" class="form-control" placeholder="Digite o título eleitoral" />
                            <span asp-validation-for="titulo_eleitoral" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Informação:</strong> Após cadastrar o eleitor, ele poderá se registrar como usuário do sistema.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Eleitores")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Cadastrar Eleitor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}