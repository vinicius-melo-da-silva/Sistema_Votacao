@model IEnumerable<SistemaVotacao.Models.Candidatos>

@{
    ViewData["Title"] = "Candidatos";
    Layout = "_LayoutPublic";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0"><i class="fas fa-user-tie"></i> @ViewData["Title"]</h2>
                    <p class="mb-0 mt-2">Conheça os candidatos da eleição</p>
                </div>
                <div class="card-body">
                    <!-- Filtros -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nome...">
                                <button class="btn btn-outline-secondary" type="button" id="btnSearch">
                                    <i class="fas fa-search"></i>
                                </button>
                                <button class="btn btn-outline-secondary" type="button" id="btnClearSearch">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                Total de candidatos: <strong id="totalCandidatos">@Model.Count()</strong>
                            </small>
                        </div>
                    </div>

                    <!-- Grid de Candidatos -->
                    <div class="row" id="gridCandidatos">
                        @foreach (var candidato in Model)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 mb-4 candidato-card">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-header bg-light text-center py-3">
                                        @if (!string.IsNullOrEmpty(candidato.foto))
                                        {
                                            <img src="@candidato.foto" class="candidato-foto rounded-circle mb-2" alt="@candidato.nome">
                                        }
                                        else
                                        {
                                            <div class="candidato-foto-placeholder rounded-circle bg-secondary mx-auto mb-2 d-flex align-items-center justify-content-center">
                                                <i class="fas fa-user fa-2x text-white"></i>
                                            </div>
                                        }
                                        <h5 class="card-title mb-1">@candidato.nome</h5>
                                        <small class="text-muted">ID: @candidato.id_candidato</small>
                                    </div>
                                    <div class="card-body">
                                        <div class="candidato-info">
                                            <div class="mb-2">
                                                <small class="text-muted"><i class="fas fa-id-card"></i> CPF:</small>
                                                <div class="fw-bold">@candidato.cpf</div>
                                            </div>
                                            <div class="mb-2">
                                                <small class="text-muted"><i class="fas fa-certificate"></i> Título Eleitoral:</small>
                                                <div class="fw-bold">@candidato.titulo_eleitoral</div>
                                            </div>
                                            <div class="mb-2">
                                                <small class="text-muted"><i class="fas fa-calendar"></i> Cadastrado em:</small>
                                                <div>@candidato.criado_em.ToString("dd/MM/yyyy")</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent text-center">
                                        <small class="text-muted">
                                            <i class="fas fa-clock"></i>
                                            Desde @candidato.criado_em.ToString("MM/yyyy")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-user-tie fa-3x mb-3"></i>
                            <h4>Nenhum candidato cadastrado</h4>
                            <p>Aguardando o cadastro dos candidatos.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const btnSearch = document.getElementById('btnSearch');
            const btnClearSearch = document.getElementById('btnClearSearch');
            const candidatoCards = document.querySelectorAll('.candidato-card');

            function aplicarFiltro() {
                const filter = searchInput.value.toLowerCase();
                let totalVisiveis = 0;

                candidatoCards.forEach(card => {
                    const nome = card.querySelector('.card-title').textContent.toLowerCase();

                    if (nome.includes(filter)) {
                        card.style.display = '';
                        totalVisiveis++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                document.getElementById('totalCandidatos').textContent = totalVisiveis;
            }

            btnSearch.addEventListener('click', aplicarFiltro);

            searchInput.addEventListener('keyup', aplicarFiltro);

            btnClearSearch.addEventListener('click', function() {
                searchInput.value = '';
                aplicarFiltro();
            });

            // Inicializar contador
            document.getElementById('totalCandidatos').textContent = candidatoCards.length;
        });
    </script>

    <style>
        .candidato-foto {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border: 3px solid #dee2e6;
        }

        .candidato-foto-placeholder {
            width: 100px;
            height: 100px;
            border: 3px solid #dee2e6;
        }

        .candidato-card {
            transition: transform 0.2s ease-in-out;
        }

            .candidato-card:hover {
                transform: translateY(-5px);
            }

        .candidato-info {
            font-size: 0.9rem;
        }

        .card {
            border: none;
            transition: all 0.3s ease;
        }

            .card:hover {
                box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            }
    </style>
}