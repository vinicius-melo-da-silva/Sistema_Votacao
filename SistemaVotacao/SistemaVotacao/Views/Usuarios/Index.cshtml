@model IEnumerable<SistemaVotacao.Models.Usuario>

@{
    ViewData["Title"] = "Gerenciar Usuários";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-users-cog"></i> @ViewData["Title"]</h4>
                    <a href="@Url.Action("Create", "Usuarios")" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Novo Usuário
                    </a>
                </div>
                <div class="card-body">
                    <!-- Filtros e Busca -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nome ou título...">
                                <button class="btn btn-outline-secondary" type="button" id="btnSearch">
                                    <i class="fas fa-search"></i>
                                </button>
                                <button class="btn btn-outline-secondary" type="button" id="btnClearSearch">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="location.reload()">
                                    <i class="fas fa-sync-alt"></i> Atualizar
                                </button>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                        <i class="fas fa-filter"></i> Filtrar
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#" data-filter="all">Todos</a></li>
                                        <li><a class="dropdown-item" href="#" data-filter="ativo">Ativos</a></li>
                                        <li><a class="dropdown-item" href="#" data-filter="inativo">Inativos</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabela de Usuários -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>Título Eleitoral</th>
                                    <th>Perfil</th>
                                    <th>Status</th>
                                    <th>Data de Cadastro</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr>
                                        <td>@usuario.id</td>
                                        <td>@usuario.nome</td>
                                        <td>
                                            <span class="badge bg-secondary">@usuario.titulo_eleitoral</span>
                                        </td>
                                        <td>
                                            <span class="badge @(usuario.role == "Adm" ? "bg-danger" : usuario.role == "Gerente" ? "bg-warning" : "bg-info")">
                                                @usuario.role
                                            </span>
                                        </td>
                                        <td>
                                            @if (usuario.ativo)
                                            {
                                                <span class="badge bg-success">Ativo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inativo</span>
                                            }
                                        </td>
                                        <td>@usuario.criado_em.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="@Url.Action("Edit", "Usuarios", new { id = usuario.id })"
                                                   class="btn btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger btn-excluir"
                                                        data-id="@usuario.id"
                                                        data-nome="@usuario.nome"
                                                        title="Excluir">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-users fa-2x mb-3"></i><br>
                            Nenhum usuário cadastrado.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmação de Exclusão -->
<div class="modal fade" id="modalExcluir" tabindex="-1" aria-labelledby="modalExcluirLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalExcluirLabel">
                    <i class="fas fa-exclamation-triangle"></i> Confirmar Exclusão
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o usuário <strong id="nomeUsuarioExcluir"></strong>?</p>
                <p class="text-danger"><strong>Esta ação não poderá ser desfeita!</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <form id="formExcluir" method="post" action="@Url.Action("Delete", "Usuarios")">
                    <input type="hidden" name="id" id="idUsuarioExcluir" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar eventos de busca
            const searchInput = document.getElementById('searchInput');
            const btnSearch = document.getElementById('btnSearch');
            const btnClearSearch = document.getElementById('btnClearSearch');
            const tableBody = document.querySelector('tbody');
            const rows = tableBody.querySelectorAll('tr');

            function aplicarFiltro() {
                const filter = searchInput.value.toLowerCase();

                rows.forEach(row => {
                    const nome = row.cells[1].textContent.toLowerCase();
                    const titulo = row.cells[2].textContent.toLowerCase();

                    if (nome.includes(filter) || titulo.includes(filter)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }

            btnSearch.addEventListener('click', aplicarFiltro);

            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    aplicarFiltro();
                }
            });

            btnClearSearch.addEventListener('click', function() {
                searchInput.value = '';
                aplicarFiltro();
            });

            // Configurar eventos de exclusão
            document.querySelectorAll('.btn-excluir').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const nome = this.getAttribute('data-nome');

                    document.getElementById('nomeUsuarioExcluir').textContent = nome;
                    document.getElementById('idUsuarioExcluir').value = id;

                    const modal = new bootstrap.Modal(document.getElementById('modalExcluir'));
                    modal.show();
                });
            });

            // Filtros por status
            document.querySelectorAll('[data-filter]').forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const filter = this.getAttribute('data-filter');

                    rows.forEach(row => {
                        const status = row.cells[4].textContent.toLowerCase();

                        if (filter === 'all') {
                            row.style.display = '';
                        } else if (filter === 'ativo' && status.includes('ativo')) {
                            row.style.display = '';
                        } else if (filter === 'inativo' && status.includes('inativo')) {
                            row.style.display = '';
                        } else if (filter !== 'all') {
                            row.style.display = 'none';
                        }
                    });
                });
            });
        });
    </script>
}