@model SistemaVotacao.Models.Candidatos

@{
    ViewData["Title"] = "Editar Candidato";
}

<h1>Editar Candidato</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_candidato" />

            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="cpf" class="control-label"></label>
                <input asp-for="cpf" class="form-control" />
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="titulo_eleitoral" class="control-label"></label>
                <input asp-for="titulo_eleitoral" class="form-control" />
                <span asp-validation-for="titulo_eleitoral" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Foto Atual</label><br />
                @if (!string.IsNullOrEmpty(Model.foto))
                {
                    <img src="@Model.foto" alt="Foto Atual" class="img-thumbnail" style="max-width: 200px;" />
                }
                else
                {
                    <span class="text-muted">Nenhuma foto cadastrada</span>
                }
            </div>

            <div class="form-group">
                <label for="novaFoto" class="control-label">Nova Foto</label>
                <input type="file" name="foto" class="form-control-file" accept="image/*" />
                <small class="form-text text-muted">Deixe em branco para manter a foto atual</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-warning">Atualizar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}