@model SistemaVotacao.Models.Candidatos

@{
    ViewData["Title"] = "Detalhes do Candidato";
}

<h1>Detalhes</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.foto)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.foto))
            {
                <img src="@Model.foto" alt="Foto" class="img-fluid" style="max-width: 200px;" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.titulo_eleitoral)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.titulo_eleitoral)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.criado_em)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.criado_em)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>